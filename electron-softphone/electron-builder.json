{
  "appId": "com.mayday.appbar",
  "productName": "Mayday",
  "directories": {
    "output": "release/"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "native/win-appbar/lib/**/*",
    "native/win-appbar/build/Release/*.node"
  ],
  "extraResources": [
    {
      "from": "native/win-appbar/build/Release/",
      "to": "native/win-appbar/build/Release/",
      "filter": [
        "*.node"
      ]
    }
  ],
  "win": {
    "target": [
      "nsis"
    ],
    "icon": "build/mayday_app_icon.ico",
    "signAndEditExecutable": false,
    "forceCodeSigning": false
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Mayday"
  },
  "asarUnpack": [
    "**/*.node",
    "native/**/*"
  ],
  "publish": {
    "provider": "generic",
    "url": "http://192.168.1.14/downloads/"
  }
}